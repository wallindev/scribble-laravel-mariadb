@font-face {
  font-family: Roboto;
  font-style: normal;
  font-weight: 100 900;
  font-display: swap;
  src: url(../fonts/Roboto-VariableFont_wdth,wght.ttf) format('truetype');
}

body
  /* font-size 16px */
  font-family Roboto, 'Segoe UI', 'Helvetica Neue', Arial, sans-serif
  background-color #0f0f0f
  color #ecececec

.container
  margin-top 16px
  /* display flex
  flex-direction column */

section
  font-size 16px
  line-height 1.5px
  display flex
  background-color rgba(0, 0, 0, .24)
  border-color rgba(0, 0, 0, 0.06)
  border-radius 4px
  color #fff
  padding 16px 8px
  margin 0 auto 0 0

form
  font-size 16px
  line-height 1.5

table, tr
  margin 0
  padding 0

td, td.button, th
  font-size 16px
  line-height 1.5
  padding 4px

td.button
  padding-top 8px

td.button--right
  text-align right

label
  font-weight 600

input, textarea
  background-color rgba(255, 255, 255, .09)
  border 2px solid rgba(255, 255, 255, .24)
  font-size 16px
  line-height 1.5
  color #fff
  border-radius 4px
  padding 4px 8px
  width 300px
  box-shadow none
  text-shadow none
  outline none

input:focus, textarea:focus
  border-color #007bff

a:not(.btn), a:not(.btn):visited
  color #fff
  text-decoration none

a:not(.btn):hover
  color #ccc

button, .link-button
  font-size 16px
  display inline-block
  line-height 1.5
  border 0 none
  padding 4px 8px
  background-color #007bff
  color white
  text-decoration none
  border-radius 4px
  cursor pointer
  transition background-color 0.1s

button:hover, .link-button:hover
  background-color #0056b3

button:active, .link-button:active
  background-color #007bff
