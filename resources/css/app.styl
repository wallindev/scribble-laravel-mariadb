@font-face {
  font-family: Roboto;
  font-style: normal;
  font-weight: 100 900;
  font-display: swap;
  src: url(../fonts/Roboto-VariableFont_wdth,wght.ttf) format('truetype');
}

/*
 * Colors from https://www.needsomefun.net/41-best-parks-and-recreation-tv-show-quotes/
 *
 * bg-colors: #333333, #1a1a1a, #ccc, #000, #262626
 * text-color: #fff
 * text-hover-color: #808080
 * Transition hover-color: color 375ms ease-in-out
 *
 */

body
  margin .5rem
  font-size 16px
  font-family Roboto, 'Segoe UI', 'Helvetica Neue', Arial, sans-serif
  background-color #0f0f0f
  color #ecececec

.header
  display flex
  flex-direction column
  margin 0 auto
  border-bottom 1px solid #242424

.main-nav
  display flex
  justify-content space-between
  align-items center
  margin 1rem 0

.main
  display flex
  flex-direction column
  margin 1rem auto

.footer
  display flex
  flex-direction column
  margin 0 auto
  border-top 1px solid #242424

@media (min-width 576px)
  .header, .main, .footer
    max-width 540px

@media (min-width 768px)
  .header, .main, .footer
    max-width 720px

@media (min-width 992px)
  .header, .main, .footer
    max-width 960px

@media (min-width 1200px)
  .header, .main, .footer
    max-width 1140px

.user-msg
  padding 1rem
  margin-bottom 1rem
  border-radius .25rem
  font-weight 600

section
  // font-size 16px
  line-height 1.5px
  // display flex
  // flex-direction column
  background-color rgba(0, 0, 0, .24)
  border-color rgba(0, 0, 0, 0.06)
  border-radius .25rem
  color #fff
  padding 1rem .5rem
  margin 0

/* form
  font-size 16px
  line-height 1.5 */

table
  // display flex
  // flex-direction column

table, tr
  margin 0
  padding 0

tr.heading
  text-align center

td, td.button, th
  font-family inherit
  font-size inherit
  line-height 1.5
  padding .5rem
  white-space nowrap

td.heading
  // flex-grow 0

td.content
  width 85%
  // flex-grow 1

td.button
  padding-top .5rem

td.button--right
  text-align right

label
  font-weight 600

input, textarea
  background-color rgba(255, 255, 255, .09)
  border 0 none
  font-family inherit
  font-size inherit
  line-height 1.5
  color #fff
  border-radius .25rem
  padding .25rem .5rem
  box-shadow 0 4px 24px purple
  text-shadow none
  outline 2px solid rgba(255, 255, 255, .24)

input:not([type=checkbox]):not([type=radio]), textarea
  width 300px
  td.content &
    width 85%

input[type=checkbox], input[type=radio]
  width 1rem
  height 1rem
  appearance none
  cursor pointer
  position relative

input[type=radio]
  border-radius 50%

input[type=checkbox]:hover, input[type=radio]:hover
  outline-color rgba(255, 255, 255, .20)

input[type=checkbox]:focus, input[type=radio]:focus
  outline-color #007bff

input[type=checkbox]:after, input[type=radio]:after
  content ''
  position absolute
  line-height 1

input[type=checkbox]:checked:after
  content '✓'
  top -9px
  left 0
  font-size 28px

input[type=radio]:checked:after
  content '⊚'
  top 0
  left 1px
  font-size 16px

// textarea
  // height auto
  // height 3lh + .5rem

input:not([type=checkbox]):not([type=radio]):focus, textarea:focus
  outline-color #007bff

h2
  margin-left: .75rem;

a, a:visited
  color #fff
  text-decoration none

a:hover
  color #ccc

/* a:not(.btn), a:not(.btn):visited
  color #fff
  text-decoration none

a:not(.btn):hover
  color #ccc */

p
  margin 0
  padding 0

ul, li
  margin 0

ul
  padding-left 1rem

button, .link-button
  font-family inherit
  font-size inherit
  display inline-block
  line-height 1.5
  border 0 none
  padding .25rem .5rem
  background-color #007bff
  color white
  text-decoration none
  border-radius .25rem
  cursor pointer
  transition background-color 0.1s
  white-space: nowrap;

button:hover, .link-button:hover
  background-color #0056b3

button:active, .link-button:active
  background-color #007bff
